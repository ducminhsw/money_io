<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:background="@drawable/bg_app">

    <TextView android:id="@+id/login_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp"
        android:layout_marginHorizontal="20dp"/>

    <EditText android:id="@+id/signup_email"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toBottomOf="@+id/login_txt"
        android:layout_marginTop="30dp"
        android:hint="Email"
        android:layout_marginHorizontal="20dp"
        android:inputType="textEmailAddress"/>

    <EditText android:id="@+id/signup_password1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_email"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:layout_marginHorizontal="20dp"
        android:inputType="textPassword"/>

    <EditText android:id="@+id/signup_password2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_password1"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:layout_marginHorizontal="20dp"
        android:inputType="textPassword"/>

    <Button android:id="@+id/signup_btn"
        android:layout_width="112dp"
        android:layout_height="56dp"
        android:textSize="18sp"
        android:text="Sign up"
        app:layout_constraintTop_toBottomOf="@+id/signup_password2"
        app:layout_constraintEnd_toEndOf="@+id/signup_password2"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#e03218"/>

</androidx.constraintlayout.widget.ConstraintLayout>